{% extends 'base.html.twig' %}

{% block title %}Manage Products{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Manage Products</h1>
    <a href="{{ path('app_admin_product_new') }}" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Add New Product
    </a>
</div>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Slug</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Created At</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>
                        {% if product.imagePath %}
                            <img src="{{ product.imagePath }}" alt="{{ product.name }}" class="rounded" style="width: 50px; height: 50px; object-fit: cover;">
                        {% else %}
                            <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                <i class="bi bi-image text-muted"></i>
                            </div>
                        {% endif %}
                    </td>
                    <td><strong>{{ product.name }}</strong></td>
                    <td><code>{{ product.slug }}</code></td>
                    <td>{{ product.price }} â‚¬</td>
                    <td>
                        <span class="badge {{ product.stock > 10 ? 'bg-success' : (product.stock > 0 ? 'bg-warning' : 'bg-danger') }}">
                            {{ product.stock }}
                        </span>
                    </td>
                    <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i') : '' }}</td>
                    <td class="text-end">
                        <div class="btn-group">
                            <a href="{{ path('app_admin_product_edit', {'id': product.id}) }}" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <form method="post" action="{{ path('app_admin_product_delete', {'id': product.id}) }}" style="display:inline-block" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                <button class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center py-4 text-muted">No products found.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

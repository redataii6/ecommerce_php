{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Edit Product: {{ product.name }}</h1>
        <form method="post" action="{{ path('app_admin_product_delete', {'id': product.id}) }}" onsubmit="return confirm('Are you sure you want to delete this product?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
            <button class="btn btn-outline-danger">
                <i class="bi bi-trash"></i> Delete Product
            </button>
        </form>
    </div>

    {{ include('admin/product/_form.html.twig', {'button_label': 'Update Product'}) }}
{% endblock %}

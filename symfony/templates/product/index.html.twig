{% extends 'base.html.twig' %}

{% block title %}Product Catalogue{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mb-4">Our Products</h1>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        {% for product in products %}
            <div class="col">
                <div class="card h-100 shadow-sm">
                    {% if product.imagePath %}
                        <img src="{{ product.imagePath }}" class="card-img-top" alt="{{ product.name }}" style="height: 200px; object-fit: cover;">
                    {% else %}
                        <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                        </div>
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text text-muted small">{{ product.description|slice(0, 100) }}...</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h5 mb-0 text-success">{{ product.price }} â‚¬</span>
                            <span class="badge {{ product.stock > 0 ? 'bg-info' : 'bg-danger' }}">
                                {{ product.stock > 0 ? 'In Stock: ' ~ product.stock : 'Out of Stock' }}
                            </span>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-top-0">
                        <a href="#" class="btn btn-outline-success w-100">Add to Cart</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center py-5">
                <p class="text-muted">No products found in the catalogue.</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
